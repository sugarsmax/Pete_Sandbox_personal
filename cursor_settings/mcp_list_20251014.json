{
    "description": "MCP Atlassian Server Configuration for Autodesk",
    "mcpServers": {
        "fusion_design_mcp": {
            "url": "http://127.0.0.1:4000/mcp",
            "env": {}
        },
        "Autodesk Atlassian MCP": {
            "command": "npx",
            "args": [
                "--registry",
                "https://npm.autodesk.com/artifactory/api/npm/autodesk-npm-virtual",
                "-y",
                "@adsk/adsk-atlassian-mcp@latest",
                "mcp",
                "--wiki",
                "--jira"
            ],
            "env": {
                "WIKI_ACCESS_TOKEN": "[REDACTED]",
                "JIRA_ACCESS_TOKEN": "[REDACTED]"
            }
        },
        "Translation Assistant": {
            "command": "npx",
            "args": [
                "mcp-remote",
                "https://mcp-alb-private.l10nmt-c-uw2.cloudos.autodesk.com/mcp"
            ]
        },
        "local_mcp": {
            "transport": "http",
            "url": "http://localhost:8000/mcp-server/mcp"
        },
        "playwright-extension": {
            "url": "http://localhost:3000/mcp"
        },
        "help_mcp_local": {
            "command": "python",
            "args": [
                "/Users/maxfiep/git_adsk/help-mcp/app/mcp_server.py",
                "--transport",
                "http",
                "--port",
                "8001"
            ],
            "env": {
                "ADSK_HELP_DEFAULT_LANGUAGE": "ENU"
            }
        },
        "snowflake": {
            "command": "/Users/maxfiep/git_adsk/snowflake-mcp-server/venv/bin/python",
            "args": [
                "/Users/maxfiep/git_adsk/snowflake-mcp-server/server.py"
            ],
            "env": {
                "SNOWFLAKE_ACCOUNT": "autodesk.us-east-1",
                "SNOWFLAKE_AUTHENTICATOR": "externalbrowser",
                "SNOWFLAKE_WAREHOUSE": "adp_publish",
                "SNOWFLAKE_DATABASE": "adp_workspaces",
                "SNOWFLAKE_SCHEMA": "fusion_private",
                "SNOWFLAKE_ROLE": "ADP_PUB_RO_GROUP",
                "SNOWFLAKE_TIMEOUT": "600"
            }
        },
        "mcp-server-chart": {
            "command": "npm",
            "args": [
                "start"
            ],
            "cwd": "/Users/maxfiep/git_adsk/mcp-trino-viz"
        },
        "mcp-trino": {
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "-i",
                "--name",
                "mcp-trino-server",
                "--env-file",
                "/Users/maxfiep/git_adsk/mcp-trino-viz/mcp-trino.env",
                "-e",
                "MCP_TRANSPORT=stdio",
                "ghcr.io/tuannvm/mcp-trino:latest"
            ]
        }
    }
}